
<h1>Add Marks of  <%= student.name %></h1>
<button onclick="goBack()" class="btn btn-primary">Go Back</button>
<script>
    function goBack() {
    window.history.back();
    }
    </script>
        

<a href="/subject/addSub"> <button class="btn btn-primary">Add Subject</button> </a>
      <table class="table">
          <form action="/student/<%= student._id %>/addMarks" method="POST">
        <tbody>
          <tr><div class="form-group">
              <td> <label for="name">Semester & Sessional</label></td>
              <td><select name="semester" id="MySem" class="custom-select">
                          <option value="<%= student.sname %>"><%= student.sname %></option>
                          <option value="1">1st</option>
                          <option value="2">2nd</option>
                          <option value="3">3rd</option>
                          <option value="4">4th</option>
                          <option value="5">5th</option>
                          <option value="6">6th</option>
                          <option value="7">7th</option>
                          <option value="8">8th</option>
                        </select></td>
              <td><select name="sessional" class="custom-select" required>
                                  <option value="" selected disabled hidden>Select Sessional</option>
                                  <option value="1">1st</option>
                                  <option value="2">2nd</option>
                                  <option value="3">3rd</option>
                                  <option value="4">Semester Exam</option>
                                </select></td>
          </tr></div>
          <% var i = 1 %>
          <% subject.forEach(function(sub){   %>
          <tr>
            <td>
                <div class="form-group">
                    <label >Subject <%= i %></label>
                  </td>
                  <td><input type="text" class="form-control " name="subName<%= i %>" value="<%= sub.name %>" disabled ></td> 
                  <td><input type="text" class="form-control " name="marks<%= i %>" placeholder="Marks" min="0" max="100" required ></td>
                </div>
              </tr>
              <% i+=1 %>
              <% }) %>
         <tr>
           <td></td>
           <td></td>
           <td>
             <button type="submit" class="btn btn-primary">Submit</button>
           </td>
         </tr>

        </tbody>
      </table>

  </body>
</html>
