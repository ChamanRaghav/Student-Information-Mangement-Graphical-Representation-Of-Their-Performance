
<h1>Change The Details of The Subject <b><%= subject.name %></b> </h1>


<button onclick="goBack()" class="btn btn-primary">Go Back</button>
<script>
  function goBack() {
    window.history.back();
  }
  </script>

<form action="/subject/edit/<%= subject._id %>?_method=PUT" method="POST">
    
   <table class="table">
         <tr>
               <div class="form-group"></div>
                 <td> <label for="department">Department:</label></td>
                <td> <select name="branch" class="custom-select">
                   <option value="Computer Science & Engineering">Computer Science & Engineering</option>
                   <option value="Electronics & Communication Engineering">Electronics & Communication Engineering</option>
                   <option value="Electrical & Electrionics Engineering">Electrical & Electrionics Engineering</option>
                   <option value="Mechanical Engineering">Mechanical Engineering</option>
                   <option value="Civil Engineering">Civil Engineering</option>
                 </select> </td>
               </div>
             </tr>
             <tr>
               <div class="form-group">
                   <td> <label for="semester">Semester:</label></td>
                   <td><select name="semester" class="custom-select">
                     <option value="1">1st</option>
                     <option value="2">2nd</option>
                     <option value="3">3rd</option>
                     <option value="4">4th</option>
                     <option value="5">5th</option>
                     <option value="6">6th</option>
                     <option value="7">7th</option>
                     <option value="8">8th</option>
                   </select></td>
                 </div>
             </tr>
        <tr>
                <div class="form-group">
               <td> <label for="name">*Name:</label></td>
               <td> <input type="text" class="form-control"  name="name" value="<%= subject.name %>" placeholder="Subject Name"></td>
            </div>
           </tr>
           <tr>
            <div class="form-group">
               <td> <label for="subCode">*Subject Code:</label></td>
               <td>   <input type="text" class="form-control"  name="subCode" value="<%= subject.subCode %>" placeholder="Subject Code">
            </div>
           </tr>
           <tr>
                <div class="form-group">
               <td> <label for="name">Teacher:</label></td>
               <td> <input type="text" class="form-control"  name="teacher" value="<%= subject.teacher %>" placeholder="Faculty Name"></td>
            </div>
           </tr>
        <tr>
            <div class="form-group">
           <td> <label for="form">*Type:</label></td>
           <td> <select name="form" class="custom-select">
               <option value="Theory">Theory</option>
               <option value="Practical">Practical</option>
             </select>
             <br><br>
             <button type="submit" class="btn btn-primary btn-lg">Save Details</button></td>
        </div>
    </tr>
   </table>
</form>
