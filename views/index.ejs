      <table id="myTable" class="table">
        <thead>
          <tr>
          <th scope="col">Roll No.</th>
          <th scope="col">Name</th>
          <th scope="col">Registration No.</th>
          <th scope="col">Department Name</th>
          <th scope="col">Semester</th>
          <th scope="col">Action</th>
                    
          </tr>
        </thead>
        <tbody>
        <% students.forEach(function(student){ %>
          <tr>
          <th scope="row"><%= student.rollno %></th>
          <td ><%= student.name %></td>
          <td><%= student.rgno %></td>
          <td><%= student.dname %></td>
          <td><%= student.sname %></td>
      <td>
        <ul class="action">
            <% if(login){ %>
              <li>
                <a href="/student/studentDetails/<%=student._id %>" class="btn btn-success btn-sm">Detail</a >
              </li>
              <li>
                  <a href="/users/index/<%=student._id %>" class="btn btn-warn btn-sm">Edit</a>
              </li>
              <li>
                    <form action="/users/index/<%= student._id%>?_method=DELETE" method="POST">
                      <button onclick="return confirm('Delete <%= student.name %>\'s Record Permanently?');" class="btn btn-danger btn-sm d-flex justify-content-end">Remove</button>
                  </form>
              </li>
              <%  } else {  %>
                <li>
                    <a href="/student/studentDetails/<%=student._id %>" class="btn btn-primary btn-sm">Detail</a >
<a href="/student/<%=student._id %>"><button class="btn btn-primary mr-5 fa-pull-right">See Performance</button></a>

                    </li>
              <% } %>
    </ul>
    
    </td> 
    </tr>
    <%})%>
